<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.mindnest.DashboardController"
           prefWidth="700" prefHeight="500"
           stylesheets="@../styles/dashboard.css">

    <VBox alignment="TOP_CENTER"
          spacing="30"
          StackPane.alignment="CENTER"
          maxWidth="400"
          maxHeight="500"
          styleClass="dashboard-panel">

        <!-- Welcome Text -->
        <Label fx:id="welcomeLabel"
               text="Welcome to MindNest"
               styleClass="welcome-label"/>

        <!-- Buttons -->
        <VBox spacing="20" alignment="CENTER">
            <Button fx:id="findButton"
                    text="Find a Therapist"
                    onAction="#handleFindTherapist"
                    styleClass="primary-button"/>

            <Button fx:id="bookButton"
                    text="Book a Session"
                    onAction="#handleBookSession"
                    styleClass="secondary-button"/>

            <Button fx:id="logoutButton"
                    text="Log Out"
                    onAction="#handleLogout"
                    styleClass="danger-button"/>
        </VBox>
    </VBox>
</StackPane>
