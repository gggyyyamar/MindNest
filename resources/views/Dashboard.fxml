<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mindnest.DashboardController"
            prefWidth="1000" prefHeight="600"
            stylesheets="@../styles/dashboard.css">

    <children>

        <!-- Welcome Label -->
        <Label fx:id="welcomeLabel"
               layoutX="350" layoutY="40"
               text="Welcome, Student to MindNest"
               styleClass="welcome-label"/>

        <!-- Transparent Rounded VBox Panel -->
        <VBox layoutX="300" layoutY="100"
              prefWidth="400" prefHeight="300"
              spacing="20"
              alignment="CENTER"
              styleClass="dashboard-panel">

            <children>
                <Button fx:id="findButton" text="Find Therapist" onAction="#handleFindTherapist"/>
                <Button fx:id="bookButton" text="Book Session" onAction="#handleBookSession"/>
                <Button fx:id="logoutButton" text="Log Out" onAction="#handleLogout"/>
            </children>
        </VBox>

    </children>
</AnchorPane>
