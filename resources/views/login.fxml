<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mindnest.LoginController"
            prefWidth="400" prefHeight="300"
            stylesheets="@../styles/login.css">

    <children>

        <!-- Semi-transparent rounded container -->
        <VBox layoutX="300" layoutY="40"
              prefWidth="300" prefHeight="220"
              spacing="15" alignment="TOP_CENTER"
              styleClass="login-panel">

            <children>

                <Label text="MindNest Login" styleClass="title-label"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Email:"/>
                    <TextField fx:id="emailField"
                               prefWidth="180"
                               promptText="Enter your email"/>
                </HBox>

                <Label fx:id="statusLabel"
                       textFill="red" />

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="loginButton"
                            text="Login"
                            onAction="#handleLogin"/>
                    <Button fx:id="signupRedirectButton"
                            text="Sign Up"
                            onAction="#handleSignupRedirect"
                            visible="false"/>
                </HBox>

            </children>
        </VBox>

    </children>
</AnchorPane>
