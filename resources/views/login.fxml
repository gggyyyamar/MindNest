<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.mindnest.LoginController"
           prefWidth="400" prefHeight="450"
           stylesheets="@../styles/login.css">

    <VBox alignment="TOP_CENTER"
          spacing="20"
          maxWidth="300"
          maxHeight="350"
          StackPane.alignment="CENTER"
          styleClass="login-panel">

        <!-- App Branding -->
        <Label text="MindNest"
               styleClass="app-title"/>

        <Label text="Login to Continue"
               styleClass="subtitle"/>

        <!-- Email Input -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Email:"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       maxWidth="250"/>
        </VBox>

        <!-- Feedback Label -->
        <Label fx:id="statusLabel"
               wrapText="true"
               styleClass="status-label"/>

        <!-- Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="loginButton"
                    text="Login"
                    onAction="#handleLogin"
                    styleClass="primary-button"/>
            <Button fx:id="signupRedirectButton"
                    text="Sign Up"
                    onAction="#handleSignupRedirect"
                    visible="false"
                    styleClass="secondary-button"/>
        </HBox>

    </VBox>
</StackPane>
